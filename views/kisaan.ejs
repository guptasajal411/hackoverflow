<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Welcome, <%= kisaan.name %></h1>
    <% kisaan.yeild.forEach(function(crop){ %>
        <h3><%= crop.cropName %></h3>
        <h6><%= crop.quantity %> kgs</h6>
        <hr>
    <% }); %>
    <form action="/kisaan" method="POST">
        <input type="text" name="cropName" required placeholder="Crop name">
        <input type="number" name="quantity" required placeholder="Quantity">
        <button name="email" value="<%= kisaan.email %>" type="submit">Submit</button>
    </form>
    <h1>Cold storage status</h1>
    <% foundStorages.forEach(function(storage){ %>
        <h2><%= storage.storageName %></h2>
        <p>total storage: <%= storage.totalStorage %></p>
        <p>available storage: <%= storage.availableStorage %></p>
    <% }); %>
</body>
</html>